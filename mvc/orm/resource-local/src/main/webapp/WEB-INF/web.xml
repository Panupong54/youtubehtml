        <extension>xls</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>xlt</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>xlw</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
